#PBS -q class
#PBS -l nodes=1:fourcore
#PBS -l walltime=00:10:00
#PBS -N STDIN

# Changes to the directory we were in when we
# submit the job:

cd $PBS_O_WORKDIR

# Runs a bunch of standard command-line
# utilities, just as an example:

echo "Script began:" `date`
echo "Node:" `hostname`
echo "Current directory: ${PWD}"

echo ""
echo "=== Running OMP Sense Reversal Barrier ==="
for proc in 2 3 4 5 6 7 8 ; do
  echo "*** Running omp_sense with ${proc} threads and 100 iterations ***"
  setenv OMP_NUM_THREADS ${proc}
  ./omp_sense ${proc} 10
done

echo ""
echo "=== Done! ==="

# eof
